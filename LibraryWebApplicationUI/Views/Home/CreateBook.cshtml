@model LibraryWebApplicationUI.Models.Book

@{
    ViewData["Title"] = "Добавление книги";
}

<h1>Добавление книги</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateBook" enctype="multipart/form-data" id="create-book-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label"></label>
                <input asp-for="CoverImage" type="file" id="cover-image" name="cover-image" class="form-control" />
                <span asp-validation-for="CoverImage" class="text-danger" id="cover-image-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" id="book-file" name="book-file" class="form-control" />
                <span asp-validation-for="File" class="text-danger" id="book-file-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="book-name" />
                <span asp-validation-for="Name" class="text-danger" id="name-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" id="authors" />
                <span asp-validation-for="Authors" class="text-danger" id="authors-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="description" ></textarea>
                <span asp-validation-for="Description" class="text-danger" id="description-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" id="language" />
                <span asp-validation-for="Language" class="text-danger" id="language-validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" id="genre" />
                <span asp-validation-for="Genre" class="text-danger" id="genre-validation"></span>
            </div>
            <button type="submit" class="btn btn-primary" id="add-book">Добавить</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">На главную</a>
</div>

