@model LibraryWebApplicationUI.Models.Book

@{
    ViewData["Title"] = "CreateBook";
}

<h1>Редактирование книги</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditBook" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label">(Не выбирайте файл, если не хотите изменить это свойство)</label>
                <input asp-for="CoverImage" type="file" id="cover-image" name="cover-image" class="form-control" />
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">(Не выбирайте файл, если не хотите изменить это свойство)</label>
                <input asp-for="File" type="file" id="book-file" name="book-file" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Подтвердить изменения</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">На главную</a>
</div>

